<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

	<session-factory>
		<!-- JDBC Database connection settings -->
		<property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/java09_shopping?useSSL=false</property>
		<property name="connection.username">root</property>
		<property name="connection.password">123456</property>

		<!-- Select our SQL dialect engine, type of database-->
		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>

		<!-- Echo the SQL to stdout -->
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="hibernate.current_session_context_class">thread</property>

		<mapping class="persistence.ItemGroup" />
		<mapping class="persistence.Item" />
		<mapping class="persistence.ItemSize" />
		
        <!-- <property name="connection.autocommit">false</property>  -->
		
	</session-factory>

</hibernate-configuration>